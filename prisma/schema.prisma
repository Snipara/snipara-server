// Prisma schema for MCP Server (Python client)
// This should mirror the main schema in packages/database

generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
  previewFeatures      = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

// ============================================
// User & Auth Models (read-only for MCP server)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  teamMembers       TeamMember[]
  apiKeys           ApiKey[]
  teamApiKeys       TeamApiKey[]
  oauthTokens       OAuthToken[]
  sharedCollections SharedContextCollection[]
  agentsSubscriptions AgentsSubscription[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Team Models
// ============================================

model Team {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members           TeamMember[]
  invites           TeamInvite[]
  projects          Project[]
  subscription      Subscription?
  teamApiKeys       TeamApiKey[]
  teamContexts      TeamContext[]
  sharedCollections SharedContextCollection[]
  agentsSubscriptions AgentsSubscription[]

  @@map("teams")
}

model TeamMember {
  id        String   @id @default(cuid())
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  teamId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@map("team_members")
}

model TeamInvite {
  id        String   @id @default(cuid())
  email     String
  role      Role     @default(MEMBER)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  teamId String
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([email, teamId])
  @@map("team_invites")
}

enum Role {
  OWNER
  ADMIN
  MEMBER
}

// ============================================
// Project Models
// ============================================

model Project {
  id          String   @id @default(cuid())
  name        String
  slug        String
  description String?
  icon        String?  @db.Text
  githubRepo  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Automation settings (synced from dashboard)
  automationClient      String  @default("claude-code")
  autoInjectContext     Boolean @default(false)
  trackAccessedFiles    Boolean @default(false)
  preserveOnCompaction  Boolean @default(true)
  restoreOnSessionStart Boolean @default(true)
  enrichPrompts         Boolean @default(false)
  maxTokensPerQuery     Int     @default(4000)
  searchMode            String  @default("hybrid")
  includeSummaries      Boolean @default(true)

  teamId         String
  team           Team             @relation(fields: [teamId], references: [id], onDelete: Cascade)
  documents      Document[]
  sessionContext SessionContext[]
  apiKeys        ApiKey[]
  queries        Query[]
  oauthTokens    OAuthToken[]
  sharedContexts ProjectSharedContext[]
  agentMemories  AgentMemory[]
  memoryStats    MemoryStats?
  agentSwarms    AgentSwarm[]

  @@unique([teamId, slug])
  @@map("projects")
}

model Document {
  id        String   @id @default(cuid())
  path      String
  content   String   @db.Text
  hash      String
  size      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  chunks    DocumentChunk[]
  summaries DocumentSummary[]

  @@unique([projectId, path])
  @@index([projectId])
  @@map("documents")
}

/// Document chunk with embedding for semantic search
/// Note: embedding field uses raw SQL via pgvector extension
model DocumentChunk {
  id         String                    @id @default(cuid())
  content    String                    @db.Text
  embedding  Unsupported("vector(1024)")
  startLine  Int
  endLine    Int
  tokenCount Int
  title      String?
  createdAt  DateTime                  @default(now())

  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@map("document_chunks")
}

// ============================================
// Document Summary Models (LLM-generated summaries)
// ============================================

model DocumentSummary {
  id          String   @id @default(cuid())

  // The summary content
  summary     String   @db.Text
  summaryType String   @default("concise") // concise, detailed, technical, keywords, custom

  // Optional: which part of the document this summarizes
  sectionId   String?  // Section identifier (e.g., "## Authentication")
  lineStart   Int?     // Starting line (for partial document summaries)
  lineEnd     Int?     // Ending line

  // Token info
  tokenCount  Int

  // Attribution - who/what generated this summary
  generatedBy String?  // e.g., "claude-3.5-sonnet", "gpt-4", "user"

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  documentId  String
  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  // Denormalized for easier queries
  projectId   String

  // One summary per type per document (or per section if sectionId is set)
  @@unique([documentId, summaryType, sectionId])
  @@index([projectId])
  @@index([documentId])
  @@index([summaryType])
  @@map("document_summaries")
}

model SessionContext {
  id        String    @id @default(cuid())
  key       String
  value     String    @db.Text
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, key])
  @@index([projectId])
  @@map("session_contexts")
}

// ============================================
// API Key Models
// ============================================

model ApiKey {
  id         String    @id @default(cuid())
  name       String
  keyHash    String    @unique
  keyPrefix  String
  lastUsedAt DateTime?
  expiresAt  DateTime?
  createdAt  DateTime  @default(now())
  revokedAt  DateTime?

  userId    String
  projectId String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([keyHash])
  @@map("api_keys")
}

model TeamApiKey {
  id         String    @id @default(cuid())
  name       String
  keyHash    String    @unique
  keyPrefix  String
  lastUsedAt DateTime?
  expiresAt  DateTime?
  createdAt  DateTime  @default(now())
  revokedAt  DateTime?

  userId String
  teamId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team   Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([keyHash])
  @@map("team_api_keys")
}

// ============================================
// OAuth Device Flow Models
// ============================================

enum DeviceCodeStatus {
  PENDING    // Waiting for user authorization
  AUTHORIZED // User has authorized, ready for token exchange
  EXPIRED    // Code has expired
  USED       // Token already issued
  DENIED     // User denied authorization
}

model DeviceCode {
  id         String           @id @default(cuid())
  deviceCode String           @unique // Long random code for client polling
  userCode   String           @unique // Short human-readable code (e.g., "ABCD-1234")

  // Scope and context
  projectId String? // Project being authorized (set when user approves)
  scope     String  @default("mcp:read mcp:write")
  clientId  String? // Optional client identifier (e.g., "claude-desktop")

  // Status
  status         DeviceCodeStatus @default(PENDING)
  authorizedAt   DateTime?
  authorizedById String? // User who authorized

  // Expiration and polling
  expiresAt DateTime
  interval  Int      @default(5) // Polling interval in seconds

  createdAt DateTime @default(now())

  @@index([deviceCode])
  @@index([userCode])
  @@index([expiresAt])
  @@map("device_codes")
}

model OAuthToken {
  id String @id @default(cuid())

  // Token data (hashed for security)
  accessTokenHash  String  @unique
  refreshTokenHash String? @unique

  // Token prefix for identification (first 12 chars)
  tokenPrefix String

  // Ownership
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Scope and metadata
  scope      String
  clientId   String? // Client that requested the token
  clientName String? // Human-readable client name (e.g., "Claude Desktop")

  // Expiration
  accessExpiresAt  DateTime
  refreshExpiresAt DateTime?

  // Status
  revokedAt  DateTime?
  lastUsedAt DateTime?

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([projectId])
  @@index([accessTokenHash])
  @@index([refreshTokenHash])
  @@map("oauth_tokens")
}

// ============================================
// Usage Tracking Models
// ============================================

model Query {
  id           String   @id @default(cuid())
  tool         String
  inputTokens  Int
  outputTokens Int
  latencyMs    Int
  success      Boolean
  errorMessage String?
  createdAt    DateTime @default(now())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt])
  @@index([createdAt])
  @@map("queries")
}

// ============================================
// Billing Models
// ============================================

model Subscription {
  id                   String             @id @default(cuid())
  plan                 Plan               @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)
  stripeCustomerId     String?
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  teamId String @unique
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

enum Plan {
  FREE
  PRO
  TEAM
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  UNPAID
}

// ============================================
// Team Context (auto-applied to all team projects)
// ============================================

model TeamContext {
  id          String   @id @default(cuid())
  name        String
  key         String
  value       String   @db.Text
  description String?
  isActive    Boolean  @default(true)
  priority    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdById String
  updatedById String?

  teamId String
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([teamId, key])
  @@index([teamId, isActive])
  @@map("team_contexts")
}

// ============================================
// Shared Context Collections
// ============================================

enum SharedContextScope {
  GLOBAL
  TEAM
  USER
}

enum DocumentCategory {
  MANDATORY
  BEST_PRACTICES
  GUIDELINES
  REFERENCE
}

model SharedContextCollection {
  id          String             @id @default(cuid())
  name        String
  slug        String
  description String?            @db.Text
  scope       SharedContextScope

  ownerId String?
  owner   User?   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  teamId  String?
  team    Team?   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  isPublic   Boolean @default(false)
  isOfficial Boolean @default(false)

  usageCount Int @default(0)

  documents       SharedDocument[]
  mcpConfig       SharedMcpConfig?
  promptTemplates PromptTemplate[]
  projectLinks    ProjectSharedContext[]

  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug, scope, teamId])
  @@index([scope, isPublic])
  @@index([teamId])
  @@index([ownerId])
  @@map("shared_context_collections")
}

model SharedDocument {
  id           String                  @id @default(cuid())
  collectionId String
  collection   SharedContextCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  title   String
  slug    String
  content String @db.Text

  category DocumentCategory @default(BEST_PRACTICES)
  tags     String[]

  tokenCount  Int     @default(0)
  contentHash String
  embedding   Bytes?

  priority Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([collectionId, slug])
  @@index([collectionId, category])
  @@index([collectionId, priority])
  @@map("shared_documents")
}

model SharedMcpConfig {
  id           String                  @id @default(cuid())
  collectionId String                  @unique
  collection   SharedContextCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  enabledTools  String[]
  disabledTools String[]

  defaultMaxTokens  Int?
  defaultSearchMode String?

  autoProvision Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("shared_mcp_configs")
}

model PromptTemplate {
  id           String                  @id @default(cuid())
  collectionId String
  collection   SharedContextCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  name        String
  slug        String
  description String?

  prompt    String   @db.Text
  variables String[]

  category String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([collectionId, slug])
  @@index([collectionId, category])
  @@map("prompt_templates")
}

// Junction table: Project <-> SharedContextCollection
model ProjectSharedContext {
  id           String                  @id @default(cuid())
  projectId    String
  project      Project                 @relation(fields: [projectId], references: [id], onDelete: Cascade)
  collectionId String
  collection   SharedContextCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  priority  Int     @default(0)
  isEnabled Boolean @default(true)

  tokenBudgetPercent Int?
  enabledCategories  DocumentCategory[]

  acknowledgedConflicts Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, collectionId])
  @@index([projectId, priority])
  @@index([collectionId])
  @@map("project_shared_contexts")
}

// ============================================
// Snipara Agents - Memory (Phase 8)
// ============================================

enum MemoryType {
  FACT        // Objective information
  DECISION    // Choice made with rationale
  LEARNING    // Pattern or insight discovered
  PREFERENCE  // User/team preference
  TODO        // Deferred task or reminder
  CONTEXT     // General session context
}

enum MemoryScope {
  AGENT       // Specific to one agent/session
  PROJECT     // Shared across project
  TEAM        // Shared across team
  USER        // Personal across all projects
}

model AgentMemory {
  id            String       @id @default(cuid())
  projectId     String

  // Memory content
  content       String       @db.Text
  type          MemoryType   @default(FACT)
  scope         MemoryScope  @default(PROJECT)
  category      String?      // Optional grouping

  // Metadata
  source        String?      // What created this memory
  confidence    Float        @default(1.0)  // 0-1, decreases over time

  // Relationships
  relatedMemoryIds String[]  // Links to related memories
  documentRefs  String[]     // Referenced document paths

  // Lifecycle
  accessCount   Int          @default(0)
  lastAccessedAt DateTime?
  expiresAt     DateTime?    // Null = permanent
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  project       Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, type])
  @@index([projectId, category])
  @@index([projectId, scope])
  @@index([expiresAt])
  @@map("agent_memories")
}

model MemoryStats {
  id            String   @id @default(cuid())
  projectId     String   @unique

  totalMemories Int      @default(0)
  totalRecalls  Int      @default(0)
  avgRelevance  Float    @default(0)

  // By type
  factCount     Int      @default(0)
  decisionCount Int      @default(0)
  learningCount Int      @default(0)

  updatedAt     DateTime @updatedAt

  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("memory_stats")
}

// ============================================
// Snipara Agents - Multi-Agent Swarms (Phase 9.1)
// ============================================

enum ClaimStatus {
  ACTIVE
  RELEASED
  EXPIRED
}

enum TaskStatus {
  PENDING
  CLAIMED
  IN_PROGRESS
  COMPLETED
  FAILED
  CANCELLED
}

model AgentSwarm {
  id            String   @id @default(cuid())
  projectId     String
  name          String
  description   String?

  // Configuration
  maxAgents     Int      @default(10)
  taskTimeout   Int      @default(300)  // seconds
  claimTimeout  Int      @default(600)  // seconds

  // State
  isActive      Boolean  @default(true)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  completedAt   DateTime?

  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  agents        SwarmAgent[]
  claims        ResourceClaim[]
  state         SharedState[]
  events        SwarmEvent[]
  tasks         SwarmTask[]

  @@unique([projectId, name])
  @@index([projectId, isActive])
  @@map("agent_swarms")
}

model SwarmAgent {
  id            String   @id @default(cuid())
  swarmId       String
  agentId       String   // External agent identifier
  name          String?  // Human-readable name

  // Status
  isActive      Boolean  @default(true)
  lastHeartbeat DateTime @default(now())

  // Stats
  tasksCompleted Int     @default(0)
  tasksFailed   Int      @default(0)

  joinedAt      DateTime @default(now())
  leftAt        DateTime?

  swarm         AgentSwarm @relation(fields: [swarmId], references: [id], onDelete: Cascade)
  claims        ResourceClaim[]
  events        SwarmEvent[]
  tasks         SwarmTask[]

  @@unique([swarmId, agentId])
  @@index([swarmId, isActive])
  @@map("swarm_agents")
}

model ResourceClaim {
  id            String      @id @default(cuid())
  swarmId       String
  agentId       String

  // Resource identification
  resourceType  String      // "file", "function", "module", "custom"
  resourceId    String      // e.g., "src/auth.ts"

  // Status
  status        ClaimStatus @default(ACTIVE)

  // Lifecycle
  claimedAt     DateTime    @default(now())
  expiresAt     DateTime
  releasedAt    DateTime?

  swarm         AgentSwarm  @relation(fields: [swarmId], references: [id], onDelete: Cascade)
  agent         SwarmAgent  @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([swarmId, status])
  @@index([swarmId, resourceType, resourceId])
  @@index([expiresAt])
  @@map("resource_claims")
}

model SharedState {
  id            String   @id @default(cuid())
  swarmId       String

  key           String
  value         Json

  // Versioning for conflict detection
  version       Int      @default(1)

  updatedBy     String?  // agentId
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  swarm         AgentSwarm @relation(fields: [swarmId], references: [id], onDelete: Cascade)

  @@unique([swarmId, key])
  @@map("shared_state")
}

model SwarmEvent {
  id            String   @id @default(cuid())
  swarmId       String
  agentId       String?

  eventType     String   // "task_completed", "file_changed", etc.
  payload       Json

  createdAt     DateTime @default(now())

  swarm         AgentSwarm @relation(fields: [swarmId], references: [id], onDelete: Cascade)
  agent         SwarmAgent? @relation(fields: [agentId], references: [id])

  @@index([swarmId, eventType])
  @@index([swarmId, createdAt])
  @@map("swarm_events")
}

model SwarmTask {
  id            String     @id @default(cuid())
  swarmId       String

  // Task definition
  title         String
  description   String?    @db.Text
  priority      Int        @default(0)  // Higher = more urgent

  // Dependencies
  dependsOn     String[]   // Task IDs that must complete first

  // Assignment
  assignedTo    String?    // agentId
  status        TaskStatus @default(PENDING)

  // Results
  result        Json?
  error         String?    @db.Text

  // Lifecycle
  createdAt     DateTime   @default(now())
  claimedAt     DateTime?
  startedAt     DateTime?
  completedAt   DateTime?

  swarm         AgentSwarm @relation(fields: [swarmId], references: [id], onDelete: Cascade)
  agent         SwarmAgent? @relation(fields: [assignedTo], references: [id])

  @@index([swarmId, status])
  @@index([swarmId, priority])
  @@map("swarm_tasks")
}

// ============================================
// Snipara Agents - Subscription (separate billing)
// ============================================

enum AgentsPlan {
  STARTER     // $15/mo
  PRO         // $39/mo
  TEAM        // $79/mo
  ENTERPRISE  // $199/mo
}

model AgentsSubscription {
  id                    String      @id @default(cuid())
  userId                String
  teamId                String?

  // Plan info
  plan                  AgentsPlan  @default(STARTER)
  status                String      @default("active") // active, canceled, past_due

  // Stripe
  stripeSubscriptionId  String?     @unique
  stripeCustomerId      String?
  stripePriceId         String?

  // Usage limits (from plan)
  memoryLimit           Int         @default(1000)
  swarmLimit            Int         @default(1)
  agentsPerSwarmLimit   Int         @default(2)
  cacheTtlSeconds       Int         @default(300)

  // Current usage
  currentMemoryCount    Int         @default(0)
  currentSwarmCount     Int         @default(0)

  // Billing cycle
  currentPeriodStart    DateTime?
  currentPeriodEnd      DateTime?

  // Grace period for Context plan requirement (Agents TEAM/ENTERPRISE needs Context TEAM/ENTERPRISE)
  gracePeriodEnd        DateTime?
  gracePeriodReason     String?

  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  user                  User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  team                  Team?       @relation(fields: [teamId], references: [id])

  @@unique([userId, teamId])
  @@index([stripeSubscriptionId])
  @@map("agents_subscriptions")
}
